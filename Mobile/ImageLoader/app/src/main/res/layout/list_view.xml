<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">
    <RelativeLayout
        android:id="@+id/frameActionBar"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ff1919">
        <ImageView
            android:id="@+id/btnChangeView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_action_view_as_poster"
            android:onClick="changeToPager"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frameActionBar"
        android:id="@+id/listDownload">
    </ListView>
</LinearLayout>